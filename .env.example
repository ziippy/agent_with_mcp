# ============================================
# LLM 제공자 설정
# ============================================
# 사용할 LLM 제공자를 선택하세요: "azure", "openai", "vllm", "google", "anthropic", "xai"
LLM_PROVIDER=google

# Azure OpenAI 설정 (LLM_PROVIDER=azure일 때)
AZURE_OPENAI_API_KEY=7VA
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_ENDPOINT=https://aisol-oasis-eastus2.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=oasis-gpt-4.1

# OpenAI 설정 (LLM_PROVIDER=openai일 때)
OPENAI_API_KEY=sk-
OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=https://api.openai.com/v1  # 선택적, 기본값 사용

# vLLM 설정 (LLM_PROVIDER=vllm일 때)
VLLM_BASE_URL=https://hackerthon-gpt120.platform.haiqv.ai/v1/
VLLM_MODEL=GPT-OSS-120B
VLLM_API_KEY=EMPTY  # 선택적, vLLM은 API 키가 필요 없을 수 있음

# Gemini 설정 (LLM_PROVIDER=google일 때)
GEMINI_API_KEY=AIz
GEMINI_MODEL=gemini-2.5-Flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai

# Claude 설정 (LLM_PROVIDER=anthropic일 때)
ANTHROPIC_API_KEY=sk-
ANTHROPIC_MODEL=claude-sonnet-4-5
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# Grok 설정 (LLM_PROVIDER=xai일 때)
XAI_API_KEY=xai
XAI_MODEL=grok-4-fast
XAI_BASE_URL=https://api.x.ai/v1

# ============================================
# 에이전트 설정
# ============================================
# Tool 실행 최대 반복 횟수 (기본값: 10)
MAX_ITERATIONS=10

